# ───────────────────────────────────────────────
# 🌐 Backend Server Configuration
# ───────────────────────────────────────────────
APP_HOST="0.0.0.0"
APP_PORT="8080"
SSL_CERT_PATH="path/to/ssl/cert.pem"
SSL_KEY_PATH="path/to/ssl/key.pem"
CORS_ALLOW_ORIGINS="https://localhost:3000,https://localhost:8080"
CORS_ALLOW_HEADERS="Origin, Content-Type, Accept, Authorization"
BASE_URL="https://localhost:3000"

# ───────────────────────────────────────────────
# 🔐 Authentication Configuration
# ───────────────────────────────────────────────
JWT_SECRET="JWT_SECRET"                  # Generate with: python3 -c "import base64, secrets; print(base64.urlsafe_b64encode(secrets.token_bytes(32)).decode())"
INVITE_SECRET="INVITE_SECRET"            # Generate with: python3 -c "import base64, secrets; print(base64.urlsafe_b64encode(secrets.token_bytes(32)).decode())"
JWT_EXPIRY_MINUTES=15
COOKIE_EXPIRY_DAYS=7

# ───────────────────────────────────────────────
# 🛠️ Development Mode
# ───────────────────────────────────────────────
DEV_MODE=false
VERIFY_FRONTEND_HASH=true
VERIFY_FRONTEND_HASH_FREQUENCY=5

# ───────────────────────────────────────────────
# 🗄️ PostgreSQL Database Configuration
# ───────────────────────────────────────────────
POSTGRES_USER="postgres"
POSTGRES_PASSWORD="postgres"
POSTGRES_PORT="5432"
POSTGRES_HOST="localhost"
POSTGRES_DB="equipqr"

# ───────────────────────────────────────────────
# ☁️ MinIO Object Storage Configuration
# ───────────────────────────────────────────────
MINIO_ENDPOINT="localhost:9000"
MINIO_ACCESS_KEY="minioadmin" # openssl rand -base64 12 | tr -dc 'A-Za-z0-9' | cut -c1-16
MINIO_SECRET_KEY="minioadmin123" # openssl rand -base64 48 | tr -dc 'A-Za-z0-9' | head -c 32
MINIO_USE_SSL=false

# ───────────────────────────────────────────────
# 📧 Email Configuration
# ───────────────────────────────────────────────
EMAIL_ENABLED=true
EMAIL_DISPLAY_NAME="EquipQR"
EMAIL_REPLY_TO="postmaster@domain.com"

# ───── SMTP ─────
EMAIL_SMTP_ENABLE=true
EMAIL_SMTP_ADDRESS="smtp.example.org"
EMAIL_SMTP_PORT=587
EMAIL_SMTP_USERNAME="postmaster@domain.com"
EMAIL_SMTP_PASSWORD="supersecretpassword"
EMAIL_SMTP_DOMAIN="domain.com"
EMAIL_SMTP_AUTHENTICATION="plain"
EMAIL_SMTP_ENABLE_STARTTLS_AUTO=true
EMAIL_SMTP_TLS=false

# ───── Resend API (Optional, non-SMTP) ─────
RESEND_API_ENABLED=false
RESEND_API_KEY="resend_api_key"
RESEND_SENDER_EMAIL="postmaster@domain.com"

# ───────────────────────────────────────────────
# ⚙️ Frontend Dev (Vite) Proxy Configuration
# ───────────────────────────────────────────────
VITE_HOST="0.0.0.0"
VITE_PORT=3000
VITE_SSL_CERT_PATH="path/to/ssl/cert.pem"
VITE_SSL_KEY_PATH="path/to/ssl/key.pem"
VITE_PROXY_TARGET="https://localhost:8080"